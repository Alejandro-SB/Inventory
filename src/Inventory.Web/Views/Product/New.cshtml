@model Inventory.Web.Models.NewProductModel

@{
    ViewBag.Title = "Create new product";
}

<div class="container row">
    <h2 class="header">@ViewBag.Title</h2>

    <div class="row">
        @using (Html.BeginForm("New", "Product"))
        {
            @Html.AntiForgeryToken()

            <div class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBoxFor(m => m.Name, new { @class = "validate" })
                        @Html.LabelFor(m => m.Name)
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">calendar_today</i>
                        @Html.TextBoxFor(m => m.ExpirationDate, new { @class = "datepicker" })
                        @Html.LabelFor(m => m.ExpirationDate)
                        @Html.ValidationMessageFor(m => m.ExpirationDate)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        @Html.TextBoxFor(m => m.ProductType, new { @class = "validate" })
                        @Html.LabelFor(m => m.ProductType)
                        @Html.ValidationMessageFor(m => m.ProductType)
                    </div>
                </div>

                <div class="row">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        Add
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.datepicker').datepicker({
                autoClose: true,
                format: 'dd/mm/yyyy'
            });
        });

        $('.datepicker').on('focus', function (event) {
            M.Datepicker.getInstance(event.target).open();
        });
    </script>
}